@model Shop.Northwind.MvcWebUI.Areas.Admin.Models.UpdateViewModel

@{
    ViewBag.Title = "title";
    Layout = "../_Layout";
}

<h2>Update Product</h2>

<form asp-controller="Manage" asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="@Model.Product.ProductName">Product Name</label>
        <input asp-for="@Model.Product.ProductName" type="text" class="form-control" id="productName">
        <span class="text-danger" asp-validation-for="Product.ProductName"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Product.CategoryId">Category</label>
        <select asp-for="Product.CategoryId" class="form-control" asp-items="@(new SelectList(Model.Categories,"CategoryId","CategoryName"))"></select>
        <span class="text-danger" asp-validation-for="Product.CategoryId"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Product.UnitPrice">Unit Price</label>
        <input asp-for="@Model.Product.UnitPrice" type="text" class="form-control" id="UnitPrice">
        <span class="text-danger" asp-validation-for="Product.UnitPrice"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Product.UnitsInStock">Units In Stock</label>
        <input asp-for="@Model.Product.UnitsInStock" type="text" class="form-control" id="UnitsInStock">
        <span class="text-danger" asp-validation-for="Product.UnitsInStock"></span>
    </div>
    <input type="hidden" asp-for="Product.ProductId" />
    <button type="submit" class="btn btn-success">Update</button>
</form>
