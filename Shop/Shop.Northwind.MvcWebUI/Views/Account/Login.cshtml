@model Shop.Northwind.MvcWebUI.LoginViewModel

@{
    Layout = "~/Views/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Login</title>
</head>
<body>
    @if (TempData["message"] != null)
    {
        <div class="alert alert-danger">
            @TempData["message"]
        </div>
    }
    <div>
        <div class="card">
            <div class="card-header">
                <a asp-controller="Account" asp-action="Register">Register</a>
            </div>
            <div class="card-body">
                <h5 class="card-title">Login</h5>
                <form asp-controller="Account" asp-action="Login" method="post">
                    <div class="form-group">
                        <label asp-for="@Model.UserName">Username</label>
                        <input asp-for="UserName" type="text" class="form-control" id="firstName">
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Password">Password</label>
                        <input asp-for="Password" type="password" class="form-control" id="password">
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                    <div class="form-group form-check">
                        <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" asp-for="RememberMe">Remember Me</label>
                    </div>
                    <button type="submit" class="btn btn-success">Login</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>