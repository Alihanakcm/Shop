@model Shop.Northwind.MvcWebUI.CartSummaryViewModel

<div class="dropdown-menu justify-content-end" aria-labelledby="navbarDropdown">
    @foreach (var item in @Model.Cart.CartLines)
    {
        <a class="dropdown-item" href="#">@item.Product.ProductName<span class="badge badge-info">@item.Quantity</span></a>
    }

    <div class="dropdown-divider"></div>

    <a class="dropdown-item" href="#"><span class="glyphicon glyohicon-align-left glyphicon-shopping-cart"></span>@Model.Cart.Total</a>

    <div class="dropdown-divider"></div>

    <a class="dropdown-item" asp-controller="Cart" asp-action="List">Go to cart details</a>
</div>