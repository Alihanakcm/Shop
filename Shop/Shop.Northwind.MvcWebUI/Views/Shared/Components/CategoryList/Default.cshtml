@model Shop.Northwind.MvcWebUI.CategoryListViewModel

<div class="list-group">
    @foreach (var item in Model.Categories)
    {
        var css = "list-group-item list-group-item-action";
        if (@item.CategoryId == Model.CurrentCategory)
        {
            css += " active";
        }
        <a href="/Home/Index?category=@item.CategoryId" class="@css">@item.CategoryName</a>
    }
</div>